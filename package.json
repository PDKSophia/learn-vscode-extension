{
  "name": "sugar-demo-vscode",
  "displayName": "sugar-demo-vscode",
  "description": "sugarTeam first vscode demo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:BeeHive-Command",
    "onView:BeeHive-PackageAnalysis",
    "onCommand:beehive.inputName",
    "onCommand:beehive.getCurrentFilePath",
    "onCommand:beehive.customWelcome",
    "onCommand:beehive.keybindings",
    "onCommand:beehive.customMenu"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sugar",
          "title": "Sugar-BeeHive",
          "icon": "./src/logo/sugar.svg"
        }
      ]
    },
    "views": {
      "sugar": [
        {
          "id": "BeeHive-Command",
          "name": "01.命令集"
        },
        {
          "id": "BeeHive-PackageAnalysis",
          "name": "02.包分析"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "BeeHive Title",
      "properties": {
        "vscodePluginDemo.yourName": {
          "type": "string",
          "default": "guest",
          "description": "your name"
        },
        "vscodePluginDemo.showTip": {
          "type": "boolean",
          "default": true,
          "description": "custom welcome !"
        }
      }
    },
    "commands": [
      {
        "command": "beehive.inputName",
        "title": "demo1: beehive.inputName !"
      },
      {
        "command": "beehive.getCurrentFilePath",
        "title": "demo2: beehive.getCurrentFilePath !"
      },
      {
        "command": "beehive.customWelcome",
        "title": "demo3: beehive.customWelcome !"
      },
      {
        "command": "beehive.keybindings",
        "title": "demo4: beehive.keybindings !"
      },
      {
        "command": "beehive.customMenu",
        "title": "demo5: 启动自定义菜单"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "beehive.customMenu",
          "alt": "beehive.customMenu",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "beehive.keybindings",
        "key": "Cmd+]",
        "mac": "Cmd+]",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./src/snippets/html.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.52.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "ts-loader": "^8.0.14",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
